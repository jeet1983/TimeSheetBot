<context >
    
    <input pattern="*">
        <output value="Hi There! I am Snowy, your personal Digital Assistent for SNOW TimeSheet applications. Please Enter your name?" />
        <context id="leaf">
            <input pattern="$Text">
                <var name="UserName" value="$Text" scope="user" />
                <output value="Nice to meet you $UserName!. I can help you with the following" />
                <sample>
                    <item>Not Approved</item>
                    <item>Not Submitted</item>
                    <item>Pending</item>
                    <item>Less Than 40 hours</item>
                </sample>
                <context>
                    <input pattern="{$Text} *">
                        <var name="Action" value="$Text" scope="user" />
                        <output value=" Got you $UserName! you wanna $Action"/>
                        <context if="has($Action, &Submitted;Lead&quot;)" id="notsubmitted" />
                        <context if="has($Action, &Approved;Lead&quot;)" id="notapproved" />
                        <context if="has($Action, &Pending;Lead&quot;)" id="Pending" />
                        <context if="has($Action, &Pending;40&quot;)" id="lessthan40" />
                    </input>
                </context>
                 <context id="notsubmitted">
                    
                    <get url="https://qaserver.service-now.com/api/snc/botemail_timesheet/TimeSheetsNotSubmitted" var="nsResponse">
                        <header name="Content-Type" value="application/json" />
                      
                    </get>
                    
                    
                    <output value="Not Submitted $nsResponse" />
                </context>
            </input>
        </context>
           
    </input>
    
</context>
